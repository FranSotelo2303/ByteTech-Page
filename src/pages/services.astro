---
import MainLayout from "../layouts/main-layout.astro";

const services = [
  {
    title: "Software a medida",
    text: "Desarrollamos software a medida para empresas y startups. Nos especializamos en el desarrollo de aplicaciones web y de escritorio.",
  },
  {
    title: "Aplicaciones móviles",
    text: "Desarrollamos aplicaciones móviles para Android y iOS. Nos especializamos en el desarrollo de aplicaciones nativas y multiplataforma.",
  },
  {
    title: "Sitios web",
    text: "Desarrollamos sitios web a medida para empresas y startups. Nos especializamos en el desarrollo de sitios web corporativos y de comercio electrónico.",
  },
  {
    title: "Inventarios",
    text: "Desarrollamos soluciones enfocadas a la gestión de inventarios para empresas.",
  },
  {
    title: "Bases de datos",
    text: "Diseñamos, desarrollamos y gestionamos bases de datos para cualquier tipo de aplicación.",
  },
  {
    title: "Consultoría",
    text: "Brindamos consultoría en desarrollo de software y tecnologías de la información. Nos especializamos en la gestión de proyectos de software.",
  },
];


---

<MainLayout title="Nuestros servicios">

  <!-- Services Section -->

  <section class="flex content-center justify-center flex-col pt-[100px]">
    <h2
      class="text-[30px] text-center  font-dm tracking-wide capitalize leading-8 md:leading-[62.50px] md:text-[50px] text-text-darkGray"
    >
      Nuestros Servicios
    </h2>
    <div
      class="lg:max-w-[1200px] grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-10 lg:gap-y-12 xl:px-0 w-full mx-auto pt-[10px] lg:pt-[10px] justify-between"
    >
      {
        services.map((service) => {
          return (
            <div class="bg-[#013c63] w-full col-span-1 max-w-[358px] mx-auto flex rounded-[30px] ease-in-out duration-[0.35s] hover:bg-[#005891] px-5 py-[83px] flex-col justify-center items-center gap-3 md:gap-5">
              <h3 class="text-text-darkGray font-dm text-[22px] md:text-[25px] leading-loose">
                {service.title}
              </h3>
              <p class="text-base md:text-[22px] tracking-tight font-jost text-text-lightGray leading-[33px] text-center">
                {" "}
                {service.text}
              </p>
            </div>
          );
        })
      }
    </div>
  </section>

 
</MainLayout>

<style>
  /* Hide scrollbar for Chrome, Safari and Opera */
  .no-scrollbar::-webkit-scrollbar {
    display: none;
  }

  /* Hide scrollbar for IE, Edge and Firefox */
  .no-scrollbar {
    -ms-overflow-style: none; /* IE and Edge */
    scrollbar-width: none; /* Firefox */
  }
</style>
